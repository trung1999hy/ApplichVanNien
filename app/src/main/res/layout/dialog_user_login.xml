<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_event_register_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Nhập thông tin"
            android:textColor="@color/dark_blue"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_login_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_x_close"
            app:tint="@color/dark_blue" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_border_grey"
        app:layout_constraintBottom_toBottomOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/tv_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_user_name"
            android:drawablePadding="10dp"
            android:drawableTint="@color/orange"
            android:hint="Họ và tên"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_login_name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="Tên không được để trống"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:visibility="gone" />


        <EditText
            android:id="@+id/tv_login_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_birthday_cake"
            android:drawablePadding="10dp"
            android:hint="Ngày sinh"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_login_dob_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="Năm sinh không được để trống"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tv_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:drawableTint="@color/orange"
            android:hint="Email"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_login_email_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="Email không được để trống"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_border_grey"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TableRow
        android:id="@+id/ic_login_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_check"
            app:tint="@color/dark_blue" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_border_grey"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>
